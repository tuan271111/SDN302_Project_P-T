<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('./partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Change Password</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <a href="/admin/profile" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Profile
          </a>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0">Change Your Password</h5>
            </div>
            <div class="card-body">
              <form action="/admin/profile/update-password" method="POST">
                <div class="mb-3">
                  <label for="currentPassword" class="form-label">Current Password</label>
                  <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                </div>
                <div class="mb-3">
                  <label for="newPassword" class="form-label">New Password</label>
                  <input type="password" class="form-control" id="newPassword" name="newPassword" minlength="6" required>
                  <small class="form-text text-muted">Password must be at least 6 characters long</small>
                </div>
                <div class="mb-3">
                  <label for="confirmPassword" class="form-label">Confirm New Password</label>
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6" required>
                </div>
                <button type="submit" class="btn btn-primary">Update Password</button>
              </form>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">Password Guidelines</h5>
            </div>
            <div class="card-body">
              <ul class="list-group">
                <li class="list-group-item">Password must be at least 6 characters long</li>
                <li class="list-group-item">Use a combination of letters, numbers, and special characters</li>
                <li class="list-group-item">Avoid using easily guessable information like birthdays</li>
                <li class="list-group-item">Don't reuse passwords from other websites</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %>