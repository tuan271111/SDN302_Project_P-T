<%- include('../partials/header') %>

<div class="container-fluid mt-4">
  <div class="row">
    <%- include('./partials/sidebar') %>
    
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Admin Profile</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group me-2">
            <a href="/admin/profile/edit" class="btn btn-sm btn-outline-primary">
              <i class="fas fa-edit"></i> Edit Profile
            </a>
            <a href="/admin/profile/change-password" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-key"></i> Change Password
            </a>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h5 class="mb-0">Profile Information</h5>
            </div>
            <div class="card-body">
              <div class="mb-3">
                <strong>Name:</strong> <%= admin.name %>
              </div>
              <div class="mb-3">
                <strong>Email:</strong> <%= admin.email %>
              </div>
              <div class="mb-3">
                <strong>Role:</strong> <span class="badge bg-success">Administrator</span>
              </div>
              <div class="mb-3">
                <strong>Phone:</strong> <%= admin.phone || 'Not provided' %>
              </div>
              <div class="mb-3">
                <strong>Address:</strong> <%= admin.address || 'Not provided' %>
              </div>
              <div class="mb-3">
                <strong>Account Created:</strong> <%= new Date(admin.createdAt).toLocaleDateString() %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="card">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0">Admin Actions</h5>
            </div>
            <div class="card-body">
              <div class="list-group">
                <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                  <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                </a>
                <a href="/admin/users" class="list-group-item list-group-item-action">
                  <i class="fas fa-users me-2"></i> Manage Users
                </a>
                <a href="/admin/rooms" class="list-group-item list-group-item-action">
                  <i class="fas fa-bed me-2"></i> Manage Rooms
                </a>
                <a href="/admin/bookings" class="list-group-item list-group-item-action">
                  <i class="fas fa-calendar-check me-2"></i> Manage Bookings
                </a>
                <a href="/admin/service-requests" class="list-group-item list-group-item-action">
                  <i class="fas fa-concierge-bell me-2"></i> Service Requests
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<%- include('../partials/footer') %>