                              <%= booking.paymentStatus.charAt(0).toUpperCase() + booking.paymentStatus.slice(1) %>
                            </span>
                          </li>
                          <li class="list-group-item px-0">
                            <i class="fas fa-clock mr-2"></i> <strong>Booked on:</strong> <%= new Date(booking.createdAt).toLocaleDateString() %>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
      
      <!-- Cancelled Bookings -->
