<%- include('./partials/header') %>

<div class="hero-section position-relative overflow-hidden">
  <div class="banner-bg" style="background-image: url('https://images.unsplash.com/photo-1611892440504-42a792e24d32?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80');"></div>
  <div class="hero-overlay"></div>
  <div class="container text-center py-5 position-relative">
    <h1 class="display-3 fw-bold text-white animate__animated animate__fadeInDown">Welcome to Luxury Hotel</h1>
    <p class="lead text-light mt-3 animate__animated animate__fadeIn animate__delay-1s">Experience luxury like never before with our exceptional rooms and services.</p>
    <p class="text-light mb-4 animate__animated animate__fadeIn animate__delay-2s">Find your perfect stay with us. Book now to enjoy our special offers.</p>
    <a class="btn btn-outline-light btn-lg shadow-sm px-5 py-2 rounded-pill animate__animated animate__zoomIn animate__delay-3s" href="/rooms" role="button">View Rooms</a>
  </div>
</div>

<div class="container mt-5 py-5">
  <div class="row g-4 justify-content-center">
    <div class="col-md-4">
      <div class="card border-0 shadow-lg mb-4 text-center h-100 transition-hover overflow-hidden">
        <div class="card-body p-4">
          <i class="fas fa-bed fa-3x mb-3 text-primary transition-icon"></i>
          <h5 class="card-title fw-semibold text-dark">Luxurious Rooms</h5>
          <p class="card-text text-muted">Enjoy our comfortable and elegant rooms with premium amenities.</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card border-0 shadow-lg mb-4 text-center h-100 transition-hover overflow-hidden">
        <div class="card-body p-4">
          <i class="fas fa-utensils fa-3x mb-3 text-primary transition-icon"></i>
          <h5 class="card-title fw-semibold text-dark">Fine Dining</h5>
          <p class="card-text text-muted">Taste exquisite cuisines prepared by our world-class chefs.</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card border-0 shadow-lg mb-4 text-center h-100 transition-hover overflow-hidden">
        <div class="card-body p-4">
          <i class="fas fa-concierge-bell fa-3x mb-3 text-primary transition-icon"></i>
          <h5 class="card-title fw-semibold text-dark">Premium Service</h5>
          <p class="card-text text-muted">Experience our 24/7 customer service for all your needs.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>

<!-- CSS tùy chỉnh -->
<style>
  /* Hero Section với Banner */
  .hero-section {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f9fa;
  }

  .banner-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: brightness(70%);
    z-index: 1;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6));
    z-index: 2;
  }

  .hero-section .container {
    z-index: 3;
  }

  /* Typography */
  h1.display-3 {
    font-family: 'Playfair Display', serif;
    letter-spacing: 2px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .lead {
    font-size: 1.3rem;
    font-weight: 300;
    text-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
  }

  /* Button */
  .btn-outline-light {
    border-width: 2px;
    transition: all 0.3s ease;
  }

  .btn-outline-light:hover {
    background-color: #fff;
    color: #007bff;
    transform: translateY(-3px);
    box-shadow: 0 6px 15px rgba(255, 255, 255, 0.2);
  }

  /* Cards */
  .card {
    border-radius: 15px;
    background: #fff;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
  }

  .transition-hover:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15) !important;
  }

  .transition-icon {
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .card:hover .transition-icon {
    transform: scale(1.2);
    color: #0056b3 !important;
  }

  .card-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
  }

  .card-text {
    font-size: 0.95rem;
    line-height: 1.6;
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 50vh;
    }
    h1.display-3 {
      font-size: 2.5rem;
    }
    .lead {
      font-size: 1.1rem;
    }
  }
</style>