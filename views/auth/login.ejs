<%- include('../partials/header') %>

<div class="login-page position-relative min-vh-100">
  <div class="background-overlay"></div>
  <div class="container mt-5 py-5 position-relative">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card border-0 shadow-lg animate__animated animate__fadeIn">
          <div class="card-header bg-gradient-primary text-white text-center py-4">
            <h4 class="mb-0 fw-bold">Login</h4>
          </div>
          <div class="card-body p-4">
            <form action="/auth/login" method="POST">
              <div class="form-group mb-4">
                <label for="email" class="form-label fw-semibold text-dark">Email Address</label>
                <input type="email" id="email" name="email" class="form-control form-control-lg shadow-sm" required>
              </div>
              <div class="form-group mb-4">
                <label for="password" class="form-label fw-semibold text-dark">Password</label>
                <input type="password" id="password" name="password" class="form-control form-control-lg shadow-sm" required>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg rounded-pill shadow-sm transition-btn">Login</button>
              </div>
            </form>
            <div class="text-center mt-4">
              <a href="/auth/forgot-password" class="text-muted transition-link">Forgot Password?</a>
              <p class="mt-3 text-secondary">Don't have an account? <a href="/auth/register" class="text-primary fw-semibold transition-link">Register</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- CSS tùy chỉnh -->
<style>
  /* Background cho toàn bộ trang */
  .login-page {
    background: url('https://images.unsplash.com/photo-1618773928121-c32242e63f39?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
    background-size: cover;
  }

  .background-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5); /* Lớp phủ tối để chữ dễ đọc */
    z-index: 1;
  }

  .login-page .container {
    z-index: 2; /* Đảm bảo nội dung nằm trên lớp phủ */
  }

  /* Gradient Background cho Header */
  .bg-gradient-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  }

  /* Card Styling */
  .card {
    border-radius: 20px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.95); /* Nền trắng mờ nhẹ để nổi bật trên background */
  }

  .card-body {
    padding: 2rem;
  }

  /* Form Inputs */
  .form-control {
    border-radius: 10px;
    border: 1px solid #ced4da;
    transition: all 0.3s ease;
    background: #fff;
  }

  .form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
  }

  .form-control-lg {
    padding: 0.75rem 1.25rem;
    font-size: 1.1rem;
  }

  .form-label {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  /* Button */
  .btn-primary {
    background-color: #007bff;
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .transition-btn:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0, 123, 255, 0.3);
  }

  /* Links */
  .transition-link {
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .transition-link:hover {
    color: #007bff !important;
  }

  /* Typography */
  h4 {
    font-family: 'Poppins', sans-serif;
    letter-spacing: 1px;
  }

  p, a {
    font-family: 'Poppins', sans-serif;
  }

  /* Responsive Adjustments */
  @media (max-width: 576px) {
    .card-body {
      padding: 1.5rem;
    }
    .btn-lg {
      padding: 0.6rem 1.5rem;
    }
    .form-control-lg {
      font-size: 1rem;
    }
  }
</style>