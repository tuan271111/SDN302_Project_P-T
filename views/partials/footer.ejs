  <script>
    $(document).ready(function() {
      // Fix for Bootstrap 4 dropdowns
      $('.dropdown-toggle').dropdown();
      
      // Add direct logout link in case dropdown doesn't work
      if (document.querySelector('a[href="/auth/logout"]')) {
        // Add a visible logout button next to the profile dropdown if user is logged in
        const navbarNav = document.querySelector('.navbar-nav:last-child');
        if (navbarNav) {
          const logoutItem = document.createElement('li');
          logoutItem.className = 'nav-item ml-2';
          logoutItem.innerHTML = '<a class="nav-link btn btn-outline-danger btn-sm py-1 px-2 mt-1" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>';
          navbarNav.appendChild(logoutItem);
        }
      }
    });
  </script>
